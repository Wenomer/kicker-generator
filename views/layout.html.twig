<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/3.9.3/lodash.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.8.1/bootstrap-table-all.min.js"></script>
<script type="text/javascript" src="assets/jquery.form.min.js"></script>
<script type="text/javascript" src="assets/playersExcluder.js"></script>
<script type="text/javascript" src="assets/matchForm.js"></script>
<script type="text/javascript" src="assets/manualMatch.js"></script>
<script type="text/javascript" src="assets/tournament.js"></script>

{% block jscontroller %}

{% endblock %}

<script id="match-form-template" type="application/template">
    <form action="/api/match" method="POST" class="game-form match-form clearfix">
        <div class="col-lg-4">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title" id="panel-title">Red Team</h3>
                </div>
                <div class="panel-body">
                    <input type="hidden" name="match[red_goalkeeper_id]" value="<% if (match) { %><%=match.redTeam.goalkeeper%><% } %>"/>
                    <select class="form-control goalkeeper" name="match[red_goalkeeper_id]" <% if (isTournament) { %>disabled<% } %>>
                        <option value="0">Goalkeeper</option>
                        {% if players is defined %}
                            {% for player in players %}
                                <option value="{{ player.id }}" <% if (match && match.redTeam.goalkeeper == {{ player.id }}) { %>selected<% } %>>{{ player.name }}</option>
                            {% endfor %}
                        {% endif %}
                    </select>
                    <input type="hidden" name="match[red_forward_id]" value="<% if (match) { %><%=match.redTeam.forward%><% } %>"/>
                    <select class="form-control forward" name="match[red_forward_id]" <% if (isTournament) { %>disabled<% } %>>
                        <option value="0">Forward</option>
                        {% if players is defined %}
                            {% for player in players %}
                                <option value="{{ player.id }}" <% if (match && match.redTeam.forward == {{ player.id }}) { %>selected<% } %>>{{ player.name }}</option>
                            {% endfor %}
                        {% endif %}
                    </select>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title" id="panel-title">Blue Team</h3>
                </div>
                <div class="panel-body">
                    <input type="hidden" name="match[blue_goalkeeper_id]" value="<% if (match) { %><%=match.blueTeam.goalkeeper%><% } %>"/>
                    <select class="form-control goalkeeper" name="match[blue_goalkeeper_id]" <% if (isTournament) { %>disabled<% } %>>
                        <option value="0">Goalkeeper</option>
                        {% if players is defined %}
                            {% for player in players %}
                                <option value="{{ player.id }}" <% if (match && match.blueTeam.goalkeeper == {{ player.id }}) { %>selected<% } %>>{{ player.name }}</option>
                            {% endfor %}
                        {% endif %}
                    </select>
                    <input type="hidden" name="match[blue_forward_id]" value="<% if (match) { %><%=match.blueTeam.forward%><% } %>"/>
                    <select class="form-control forward" name="match[blue_forward_id]" <% if (isTournament) { %>disabled<% } %>>
                        <option value="0">Forward</option>
                       {% if players is defined %}
                            {% for player in players %}
                                <option value="{{ player.id }}" <% if (match && match.blueTeam.forward == {{ player.id }}) { %>selected<% } %>>{{ player.name }}</option>
                            {% endfor %}
                        {% endif %}
                    </select>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title" id="panel-title">Score</h3>
                </div>
                <div class="panel-body">
                    <input class="input-score red" name="match[red_score]" type="text" placeholder="0"/>
                    <input class="input-score blue" name="match[blue_score]" type="text" placeholder="0"/>
                    <input class="btn btn-success save-score" type="submit" value="Save"/>
                </div>
            </div>
        </div>
    </form>
</script>

</body>

</html>
