<h4>{{ day|date("l d-m-Y") }}</h4>
<table class="table table-bordered">
    <tr>
        <th>Time</th>
        <th>RG</th>
        <th>RF</th>
        <th>BG</th>
        <th>BF</th>
        <th>R Score</th>
        <th>B Score</th>
    </tr>
    {% for match in dayMatches %}
        <tr>
            <td>{{ match.time }}</td>
            <td data-command="red-team" player="{{ match.red_goalkeeper_id }}">{{ match.red_goalkeeper_name }}</td>
            <td data-command="red-team" player="{{ match.red_forward_id }}">{{ match.red_forward_name }}</td>
            <td data-command="blue-team" player="{{ match.blue_goalkeeper_id }}">{{ match.blue_goalkeeper_name }}</td>
            <td data-command="blue-team" player="{{ match.blue_forward_id }}">{{ match.blue_forward_name }}</td>
            <td class="red-team" data-score="{{ match.red_score }}">{{ match.red_score }}</td>
            <td class="red-team" data-score="{{ match.blue_score }}">{{ match.blue_score }}</td>
        </tr>
    {%  endfor %}
</table>